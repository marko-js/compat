{
  "name": "@marko/compat",
  "private": true,
  "homepage": "https://github.com/marko-js/compat/blob/main/README.md",
  "bugs": "https://github.com/marko-js/compat/issues/new?template=Bug_report.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/marko-js/compat"
  },
  "workspaces": [
    "packages/*",
    "tests/old"
  ],
  "scripts": {
    "build": "npm run build:types && node -r ~preload ./scripts/build.ts",
    "build:types": "tsc -b tsconfig.build.json",
    "change": "changeset add",
    "ci:test": "c8 npm test -- --forbid-only",
    "format": "eslint -f unix --fix . && prettier . --write --log-level=error && sort-package-json --quiet",
    "prepare": "husky install",
    "release": "npm run build && npm exec -w marko-widgets -w @marko/compat-v4 replace --silent src dist marko.json && changeset publish && npm exec -w marko-widgets -w @marko/compat-v4 replace --silent dist src marko.json",
    "test": "mocha",
    "version": "changeset version && npm i --package-lock-only"
  },
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.22.5",
    "@babel/preset-typescript": "^7.22.5",
    "@babel/register": "^7.22.5",
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.2",
    "@marko/compiler": "^5.32.0",
    "@testing-library/dom": "^9.3.1",
    "@types/babel__register": "^7.17.0",
    "@types/jsdom": "^21.1.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.4.8",
    "@types/resolve": "^1.20.2",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "c8": "^8.0.1",
    "context-require": "^1.3.0",
    "esbuild": "^0.18.19",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.28.0",
    "husky": "^8.0.3",
    "jsdom": "^22.1.0",
    "lint-staged": "^13.2.3",
    "marko": "^5.30.1",
    "mocha": "^10.2.0",
    "mocha-snap": "^5.0.0",
    "prettier": "^3.0.1",
    "pretty-format": "^29.6.2",
    "replace": "^1.2.2",
    "resolve": "^1.22.4",
    "resolve.exports": "^2.0.2",
    "sort-package-json": "^2.5.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6",
    "~preload": "file:scripts/preload.js"
  }
}

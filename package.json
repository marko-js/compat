{
  "name": "marko-widgets",
  "version": "8.0.0",
  "homepage": "https://github.com/marko-js/marko-widgets/blob/master/README.md",
  "bugs": "https://github.com/marko-js/marko-widgets/issues/new?template=Bug_report.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/marko-js/marko-widgets"
  },
  "license": "MIT",
  "exports": {
    "./package.json": "./package.json",
    "./marko.json": "./marko.json",
    "./renderer": "./renderer.js",
    "./dom": "./dom.js",
    "./*.marko": "./*.marko",
    "./*.d.ts": "./*.d.ts",
    "./*.json": "./*.json",
    "./*": {
      "import": "./*.mjs",
      "default": "./*.js"
    }
  },
  "files": [
    "dist",
    "marko.json",
    "!**/*.tsbuildinfo"
  ],
  "scripts": {
    "build": "npm run build:types && tsx build.mts",
    "build:types": "tsc -b tsconfig.build.json",
    "change": "changeset add",
    "ci:test": "c8 npm test -- --forbid-only",
    "format": "eslint -f unix --fix . && prettier . --write --loglevel error && sort-package-json --quiet",
    "prepare": "husky install",
    "release": "npm run build && replace --silent src dist marko.json && changeset publish && replace --silent dist src marko.json",
    "test": "mocha",
    "version": "changeset version && npm i --package-lock-only"
  },
  "dependencies": {
    "@marko/babel-utils": "^5.22.0",
    "raptor-dom": "^1.1.1",
    "raptor-renderer": "^1.5.0"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.1",
    "@marko/compiler": "^5.28.1",
    "@testing-library/dom": "^9.3.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.2.5",
    "@types/resolve": "^1.20.2",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "c8": "^7.14.0",
    "context-require": "^1.2.2",
    "esbuild": "^0.17.19",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "happy-dom": "^9.20.3",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "marko": "^5.26.1",
    "mocha": "^10.2.0",
    "mocha-snap": "^5.0.0",
    "prettier": "^2.8.8",
    "pretty-format": "^29.5.0",
    "replace": "^1.2.2",
    "resolve": "^1.22.2",
    "resolve.exports": "^2.0.2",
    "sort-package-json": "^2.4.1",
    "tsx": "^3.12.7",
    "typescript": "^5.1.3"
  },
  "peerDependencies": {
    "@marko/compiler": "^5",
    "marko": "^5"
  }
}

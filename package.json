{
  "name": "@marko/compat",
  "private": true,
  "homepage": "https://github.com/marko-js/marko-widgets/blob/master/README.md",
  "bugs": "https://github.com/marko-js/marko-widgets/issues/new?template=Bug_report.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/marko-js/marko-widgets"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build:types && node -r ./ts-load build.ts",
    "build:types": "tsc -b tsconfig.build.json",
    "change": "changeset add",
    "ci:test": "c8 npm test -- --forbid-only",
    "format": "eslint -f unix --fix . && prettier . --write --loglevel error && sort-package-json --quiet",
    "prepare": "husky install",
    "release": "npm run build && npm exec -ws replace --silent src dist marko.json && changeset publish && npm exec -ws replace --silent dist src marko.json",
    "test": "mocha",
    "version": "changeset version && npm i --package-lock-only"
  },
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.22.5",
    "@babel/preset-typescript": "^7.22.5",
    "@babel/register": "^7.22.5",
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.2",
    "@marko/compiler": "^5.30.2",
    "@testing-library/dom": "^9.3.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.3.3",
    "@types/resolve": "^1.20.2",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "c8": "^8.0.0",
    "context-require": "^1.2.2",
    "esbuild": "^0.18.11",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "happy-dom": "^10.0.3",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "marko": "^5.28.2",
    "mocha": "^10.2.0",
    "mocha-snap": "^5.0.0",
    "prettier": "^2.8.8",
    "pretty-format": "^29.6.0",
    "replace": "^1.2.2",
    "resolve": "^1.22.2",
    "resolve.exports": "^2.0.2",
    "sort-package-json": "^2.5.0",
    "typescript": "^5.1.6"
  }
}
